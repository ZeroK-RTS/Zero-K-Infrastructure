<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" uuid="3848c435-2ff0-42fc-9c39-cd9545c364e0" xsi:noNamespaceSchemaLocation="http://www.jetbrains.com/teamcity/schemas/9.0/project-config.xsd">
  <name>Master TEST build</name>
  <description>Build master</description>
  <settings>
    <parameters>
      <param name="env.build.shorthash" value="" />
    </parameters>
    <build-runners>
      <runner id="RUNNER_34" name="Generate build version" type="jetbrains_powershell">
        <parameters>
          <param name="jetbrains_powershell_bitness" value="x86" />
          <param name="jetbrains_powershell_execution" value="PS1" />
          <param name="jetbrains_powershell_script_code"><![CDATA[$counter = %build.counter%
$version = $([String]::Format("1.{0}.{1}.{2}", [DateTime]::Now.Year-2012,[DateTime]::Now.Month, $counter))"
$Hash = "%build.vcs.number%"
$ShortHash = $Hash.substring(0,7)
Write-Host "##teamcity[build.number '$version']"
Write-Host "##teamcity[build.shorthash '$ShortHash']"]]></param>
          <param name="jetbrains_powershell_script_mode" value="CODE" />
          <param name="teamcity.step.mode" value="default" />
        </parameters>
      </runner>
      <runner id="RUNNER_30" name="Rebuild all" type="VS.Solution">
        <parameters>
          <param name="build-file-path" value="Zero-K.sln" />
          <param name="msbuild.prop.Configuration" value="Release" />
          <param name="msbuild_version" value="12.0" />
          <param name="run-platform" value="x86" />
          <param name="runnerArgs" value="/p:Configuration=Release;DeployOnBuild=true;PublishProfile=Profile1;DefineConstants=&quot;RELEASE;TRACE;TEST&quot;" />
          <param name="targets" value="Build" />
          <param name="teamcity.step.mode" value="default" />
          <param name="toolsVersion" value="12.0" />
          <param name="vs.version" value="vs2013" />
        </parameters>
      </runner>
      <runner id="RUNNER_31" name="Deploy springie" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[copy /Y Springie\Springie\bin\release\Springie.exe c:\projekty\test.zero-k.info\www\lobby
copy /Y Springie\Springie\bin\release\Springie.version.txt c:\projekty\test.zero-k.info\www\lobby]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner id="RUNNER_32" name="Deploy website" type="simpleRunner">
        <parameters>
          <param name="command.executable" value="robocopy" />
          <param name="command.parameters" value="c:\temp\zkweb c:\projekty\zero-k.info\www /e" />
          <param name="script.content"><![CDATA[robocopy zero-k.info\Deploy c:\projekty\test.zero-k.info\www /e
if errorlevel 1 (
  exit 0
)]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner id="RUNNER_33" name="Deploy ZKL" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[copy /Y ZeroKLobby\bin\release\Zero-K.exe c:\projekty\test.zero-k.info\www\lobby
copy /Y ZeroKLobby\bin\release\Zero-K.version.txt c:\projekty\test.zero-k.info\www\lobby]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="Zero_K_infrastructure" />
    </vcs-settings>
    <requirements />
    <build-triggers>
      <build-trigger id="vcsTrigger" type="vcsTrigger">
        <parameters>
          <param name="groupCheckinsByCommitter" value="true" />
          <param name="perCheckinTriggering" value="true" />
          <param name="quietPeriodMode" value="DO_NOT_USE" />
          <param name="triggerRules" value="-:.TeamCity/*" />
        </parameters>
      </build-trigger>
    </build-triggers>
    <build-extensions>
      <extension id="JetBrains.AssemblyInfo" type="JetBrains.AssemblyInfo">
        <parameters>
          <param name="assembly-format" value="%build.number%" />
          <param name="info-format" value="%build.number%_%build.shorthash%" />
        </parameters>
      </extension>
    </build-extensions>
    <cleanup />
  </settings>
</build-type>

