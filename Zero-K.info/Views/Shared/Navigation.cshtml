            <a href="/mediawiki/index.php?title=Credits">Credits<span>Makers of Zero-K</span></a>
        </div>
    </div>
    <div class="donate">
        <a href="@Url.Action("Index", "Contributions")">
            <i class="fa fa-dollar"></i><div class="nav-text">Donate</div>
            <span>Help cover the server costs!</span>
        </a>
    </div>
    <div class="search">
        <form action="@Url.Action("SubmitSearch","Forum")" method="POST">
            <input type="text" name="keywords" id="keywords" data-autocomplete="@Url.Action("Index", "Autocomplete")" data-autocomplete-action="goto" />
            <button type="submit">
                <i class="fa fa-search"></i>
            </button>
        </form>
    </div>
</nav>