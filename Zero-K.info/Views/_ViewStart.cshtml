@{
    if (ViewContext.IsChildAction)
    {
        Layout = null;
    }
    else if (ViewContext.HttpContext.Request.IsAjaxRequest()) {
        Layout = "~/Views/Shared/_AjaxLayout.cshtml";
    }
    else if (ZeroKWeb.Global.IsLobbyAccess)
    {
        Layout = "~/Views/Shared/_LobbyLayout";
    }
    else
    {
        Layout = "~/Views/Shared/_SiteLayout.cshtml";
    }
}